<div class="global__dashboard-container">
  <% if(user.tipoUsuario === 2) { %><%-
  include('../partials/dashboard-user.ejs') %>

  <div class="global__dashboard-content">
    <h1 class="global__dashboard-title">Mi perfil</h1>
    <p>Username: <%- user.username %></p>
    <p>Nombre: <%- user.nombre %></p>
    <p>Apellido Paterno: <%- user.apellidoMaterno %></p>
    <p>Apellido Materno: <%- user.apellidoPaterno %></p>
    <p>Contraseña: <%- user.password %></p>
    <a href="/user/modificar"><button>Modificar Información</button></a>
  </div>

  <% } else { %>
  <div style="display: block; margin: 1rem 1rem">
    <h1>No tiene permisos para ver esta página</h1>
